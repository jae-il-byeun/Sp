<!-- 		<collection property="type" ofType="kr.kh.spring.vo.BoardTypeVO" column="bo_bt_num" select="selectBoardType"/> -->
	</resultMap>
	<select id="selectAllBoardType" resultType="kr.kh.spring.vo.BoardTypeVO">
		<![CDATA[
			select * from board_type where bt_w_authority <= #{authority}
		]]>
	</select>
 </mapper>