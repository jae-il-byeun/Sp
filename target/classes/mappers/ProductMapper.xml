<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="kr.kh.project.dao.ProductDAO">
 	<resultMap type="kr.kh.project.vo.ProductVO" id="Product">
 		<id property="bo_num" column="bo_num" />
		<result  property="bo_title" column="bo_title" />
		<result  property="bo_content" column="bo_content" />
		<result  property="bo_record_date" column="bo_record_date" />
		<result  property="bo_update_date" column="bo_update_date" />
		<result  property="bo_views" column="bo_views" />
		<result  property="bo_up" column="bo_up" />
		<result  property="bo_down" column="bo_down" />
		<result  property="bo_ori_num" column="bo_ori_num" />
		<result  property="bo_me_num" column="bo_me_num" />
		<result  property="bo_bi_num" column="bo_bi_num" />
		<result  property="bo_bt_num" column="bo_bt_num" />
<!-- 		<collection property="fileList" ofType="kr.kh.spring.vo.FileVO" column="bo_num" select="selectFileList"/> -->
<!-- 		<collection property="type" ofType="kr.kh.spring.vo.BoardTypeVO" column="bo_bt_num" select="selectBoardType"/> -->
	</resultMap>
	<insert id="insertProduct" useGeneratedKeys="true" keyProperty = "pd.product_num">
		insert into product(product_num,product_name,product_type,product_content,product_location,product_bi_id,product_service,product_address,product_lo_num)
		select ifnull(max(product_num),0)+1, #{bo.product_title},#{bo.bo_content},#{bo.bo_me_id}, #{bo.bo_bt_num},
			<if test="bo.bo_ori_num == 0">
				ifnull(max(bo_num),0)+1
			</if>
			<if test="bo.bo_ori_num != 0">
				#{bo.bo_ori_num}
			</if>
			from board
	 </insert>
	 
	 
	 <select id="selectLocation" resultType="kr.kh.project.vo.LocationVO">
	 	<![CDATA[
	 		select * from location where lo_num > 0;
	 	]]>
	 </select>
	 <select id="selectDetailLocation" resultType="kr.kh.project.vo.detailLocationVO">
	 	<![CDATA[
	 		select * from detailLocation where dl_lo_num = #{lo_num}
	 	]]>
	 </select>
 </mapper>
